/* pages/goods/goods.wxss */
page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: column
}
/* 新的css 单位 叫做 rpx */
/*  微信小程序 将屏幕分格成 750 份, 一个 rpx 就代表一份 */ 
.container .title {
  height: 60rpx;
  background: pink;
}

.container .list {
  flex: 1;
  background: rgba(255, 0, 0, 0.5)
}

.container .list .item {
  display: flex;
  height: 100rpx;
  margin: 20rpx 10rpx;
  background: rgba(0, 255, 0, 0.5)
}

.container .list .item > .info {
  flex: 1
}

.container .list .item > .nav {
  width: 100rpx
}

.container .footer {
  height: 80rpx
}